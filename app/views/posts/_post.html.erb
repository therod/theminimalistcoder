<div class="show-post-image" style="background-image: url(<%= asset_path(post.image) %>);">

  <div class="post-legend">
    <span class="post-title"><%= post.title %></span>
    <span class="post-date"><%= formatted_date(post.date) %></span>
  </div>

</div>

<div class="row centered-text">

  <div class="post-body medium tf">
    <%= post.content_html %>
  </div>

  <div class="whoring df">
    <span class="whoring-title">FEEDBACK:</span> 

    <%= link_to "mailto:rodrigo@codegestalt.com?subject=Feedback: #{post.title}" do %>
      <i class="icon-envelope-alt"></i> <span class="whoring-type">Drop me an Email</span>
    <% end %>

    <% if @post %>
      <div class="post-navigation df">
      <% if post.previous_post %>
        <div class="previous-post normal">
          <%= link_to post.previous_post.slug do %>
            <h1>Previous Article</h1>
            <%= link_to post.previous_post.title, post_url(post.previous_post.slug) %>
          <% end %>
        </div>
      <% end %>
      <% if post.next_post %>
        <div class="next-post normal">
          <%= link_to post.next_post.slug do %>
            <h1>Next Article</h1>
            <%= link_to post.next_post.title, post_url(post.next_post.slug) %>
          <% end %>
        </div>
      <% end %>
      <div style="clear: both;"></div>
      </div>
    <% end %>

  </div>

</div>

