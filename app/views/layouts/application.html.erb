        <header class="mt-12 mb-12 text-center">
          <%= link_to root_url, class: 'no-underline' do %>
            <%= image_tag "rodrigo-haenggi.jpg", size: "60x60", class: "rounded-full inline-flex" %>
            <h1 class="tracking-widest text-gray-600 uppercase">Rodrigo HÃ¤nggi</h1>
          <% end %>
        </header>
        <%# <section> %>
